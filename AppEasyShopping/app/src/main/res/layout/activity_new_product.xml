<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pe.com.gmd.appeasyshopping.NewProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/red">
        <FrameLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/shape_rosado"
            android:padding="10dp"
            android:layout_marginLeft="65dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textColor="@color/white100"
                android:textStyle="bold"
                android:id="@+id/tvOpcion1" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/circulo"
            android:padding="10dp"
            android:layout_marginLeft="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:id="@+id/tvOpcion2" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/circulo"
            android:padding="10dp"
            android:layout_marginLeft="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:id="@+id/tvOpcion3" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_menu_camera"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/btnCamera"
        android:onClick="loadImagefromGallery"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una fotografÃ­a"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/ivPhoto"/>

    <FrameLayout
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/shape_rosado"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnOk1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OK"
            android:textColor="@color/white100"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>
