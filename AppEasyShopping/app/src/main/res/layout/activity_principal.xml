<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AzaleaOriginal"
    tools:context="pe.com.gmd.appeasyshopping.PrincipalActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nameCategorias"
        android:textSize="18sp"
        android:textAlignment="center"
        android:padding="8dp"
        android:layout_margin="5sp"
        android:textColor="@color/white100"
        android:id="@+id/tviTitCategoria"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/myRecyclerView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tviTitCategoria"
        >
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
