<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/cardProducto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgProducto"
            android:src="@drawable/accesorios"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgProducto"
            android:id="@+id/txtNomProducto"
            android:text="@string/nomProductoDefault"
            android:textSize="18sp"
            android:textColor="@color/cardview_dark_background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cantProductos"
            android:layout_below="@id/txtNomProducto"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:gravity="center"
            android:id="@+id/txtCantProductos"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNomProducto"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:gravity="center"
            android:id="@+id/txtPrecio"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>